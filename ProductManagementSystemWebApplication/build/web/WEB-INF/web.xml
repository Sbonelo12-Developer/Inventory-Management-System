<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>za.ac.tut.model.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductPerCategoryServlet</servlet-name>
        <servlet-class>za.ac.tut.model.GetProductPerCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllProductsServlet</servlet-name>
        <servlet-class>za.ac.tut.model.ViewAllProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDetailsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.AddDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>za.ac.tut.model.AddProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountInventoryServlet</servlet-name>
        <servlet-class>za.ac.tut.model.CountInventoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveServlet</servlet-name>
        <servlet-class>za.ac.tut.model.RemoveServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>za.ac.tut.model.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductPerCategoryServlet</servlet-name>
        <url-pattern>/GetProductPerCategoryServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllProductsServlet</servlet-name>
        <url-pattern>/ViewAllProductsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddDetailsServlet</servlet-name>
        <url-pattern>/AddDetailsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/AddProductServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountInventoryServlet</servlet-name>
        <url-pattern>/CountInventoryServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveServlet</servlet-name>
        <url-pattern>/RemoveServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
